run() {
    local i

    for ((; i++ < ${1:-0};)) {
        "${@:2}"
    }
}

list() {
    printf '%s\n' "$@"
}

map() {
    while IFS= read -r i; do
        "$@" "$i"
    done
}

filter() {
    while IFS= read -r i; do
        "$@" "$i" > /dev/null &&
            printf '%s\n' "$i"
    done
}

reduce() {
    local a=${@: -1}

    while IFS= read -r i; do
        a=$("${@:1:$# - 1}" "$a" "$i")
    done

    printf '%s\n' "$a"
}

lambda() {
    local c=$1; shift

    eval "$c"
}

# vim: ft=sh
