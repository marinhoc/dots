#!/bin/sh

readonly DEV=wlp59s0

# ensure network block isn't empty on startup
{ echo 'default via'; ip monitor route dev "$DEV"; } |
    while read -r event; do
        case $event in
            'default via'*)
                var=$(iwgetid -r | sed 's|%|%%|g')
                var=${var:-Disconnected}
                ;;
            'Deleted default via'*)
                var=Disconnected
                ;;
            *) continue
        esac

        printf '%s\n' "ntw î€ƒ%{O10}$var"
    done
